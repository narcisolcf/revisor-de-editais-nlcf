# Document Analyzer Service Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
PORT=8080

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Google Cloud Vision API
VISION_API_ENABLED=true
VISION_API_TIMEOUT=30
VISION_API_MAX_RETRIES=3

# Google Cloud Storage
GCS_BUCKET_NAME=your-document-bucket
GCS_TEMP_BUCKET=your-temp-bucket
GCS_CACHE_BUCKET=your-cache-bucket

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false
REDIS_TTL=3600

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_THRESHOLD=1000

# OCR Configuration
OCR_ENGINE=google_vision
OCR_FALLBACK_ENGINE=tesseract
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_MAX_FILE_SIZE=50MB

# ML Model Configuration
ML_MODEL_PATH=/app/models
ML_MODEL_VERSION=v1.0
ML_CONFIDENCE_THRESHOLD=0.8
ML_ENABLE_TRAINING=false

# Analysis Configuration
ANALYSIS_TIMEOUT=120
ANALYSIS_MAX_RETRIES=2
ANALYSIS_CACHE_ENABLED=true
ANALYSIS_CACHE_TTL=1800

# Document Processing
MAX_DOCUMENT_SIZE=100MB
SUPPORTED_FORMATS=pdf,docx,doc,txt,rtf
MAX_PAGES_PER_DOCUMENT=500
TEMP_DIR=/app/temp

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Performance Configuration
WORKER_PROCESSES=2
WORKER_THREADS=4
WORKER_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=50

# Security Configuration
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT=100/hour
AUTH_ENABLED=false
AUTH_TOKEN_HEADER=X-Auth-Token

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true

# Feature Flags
FEATURE_ADVANCED_OCR=true
FEATURE_ML_CLASSIFICATION=true
FEATURE_CONFORMITY_CHECK=true
FEATURE_BATCH_PROCESSING=false
FEATURE_WEBHOOK_NOTIFICATIONS=false

# Language Configuration
DEFAULT_LANGUAGE=pt
SUPPORTED_LANGUAGES=pt,en
SPACY_MODEL_PT=pt_core_news_sm
SPACY_MODEL_EN=en_core_web_sm

# ABNT Configuration
ABNT_VALIDATION_ENABLED=true
ABNT_STRICT_MODE=false
ABNT_CITATION_CHECK=true
ABNT_FORMATTING_CHECK=true

# Legal References Configuration
LEGAL_DB_ENABLED=true
LEGAL_DB_UPDATE_INTERVAL=24h
LEGAL_REFERENCE_TIMEOUT=10

# Notification Configuration
NOTIFICATION_ENABLED=false
NOTIFICATION_WEBHOOK_URL=https://your-webhook-url.com
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_EMAIL_SMTP=smtp.gmail.com
NOTIFICATION_EMAIL_PORT=587
NOTIFICATION_EMAIL_USER=your-email@gmail.com
NOTIFICATION_EMAIL_PASSWORD=your-app-password

# Development Configuration
DEVELOPMENT_MODE=false
DEBUG_ANALYSIS=false
DEBUG_OCR=false
DEBUG_ML=false
PROFILING_ENABLED=false

# Testing Configuration
TEST_MODE=false
TEST_DATA_PATH=/app/test_data
TEST_SKIP_EXTERNAL_APIS=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=gs://your-backup-bucket

# Error Handling
ERROR_REPORTING_ENABLED=true
ERROR_NOTIFICATION_ENABLED=false
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY=5

# Resource Limits
MEMORY_LIMIT=2GB
CPU_LIMIT=2
DISK_SPACE_LIMIT=10GB
TEMP_FILE_CLEANUP_INTERVAL=1h

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000/hour
API_TIMEOUT=60
API_MAX_PAYLOAD_SIZE=100MB

# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-app.com/webhook
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3