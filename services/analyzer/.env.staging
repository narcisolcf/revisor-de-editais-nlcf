# LicitaReview Analyzer Service - Staging Environment
# Version: 1.1.0

# ==================== GCP Configuration ====================
GCP_PROJECT_ID=licitareview-staging
GCP_LOCATION=us-central1
GCS_RAG_BUCKET=licitareview-staging-rag-corpus

# ==================== Vertex AI RAG Configuration ====================
# Chunk Settings
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=100
RAG_MAX_CHUNKS_PER_DOCUMENT=100

# Models
RAG_EMBEDDING_MODEL=text-embedding-004
RAG_DEFAULT_MODEL=gemini-2.0-flash-001

# Generation Parameters
RAG_DEFAULT_TEMPERATURE=0.3
RAG_DEFAULT_TOP_P=0.95
RAG_DEFAULT_TOP_K=10
RAG_MAX_OUTPUT_TOKENS=2048

# Retrieval Settings
RAG_SIMILARITY_TOP_K=10
RAG_MIN_RELEVANCE_SCORE=0.5

# ==================== Cache Configuration ====================
REDIS_ENABLED=false  # Disabled for staging to test without cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL_SECONDS=1800  # 30 minutes for staging

# ==================== API Configuration ====================
API_KEY=staging-test-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,https://staging.licitareview.com
MAX_FILE_SIZE_MB=50

# ==================== Logging ====================
LOG_LEVEL=DEBUG  # More verbose for staging
STRUCTLOG_DEV_MODE=true

# ==================== Feature Flags ====================
RAG_ENABLED=true
OCR_ENABLED=true
ML_PREDICTIONS_ENABLED=true

# ==================== Performance ====================
# Smaller limits for staging
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT_SECONDS=60

# ==================== Monitoring ====================
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=1.0  # 100% tracing in staging

# ==================== Database ====================
FIRESTORE_DATABASE=(default)
FIRESTORE_COLLECTION_PREFIX=staging_

# ==================== Testing ====================
# Enable test mode features
TEST_MODE=false
MOCK_EXTERNAL_APIS=false
