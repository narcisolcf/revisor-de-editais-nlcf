{
  "name": "@revisor-de-editais/api",
  "version": "1.0.0",
  "description": "Revisor de Editais Cloud Functions API with Firestore integration",
  "main": "./lib/index.js",
  "scripts": {
    "dev": "firebase emulators:start --only functions,firestore",
    "build": "npm run clean && tsc",
    "build:prod": "npm run validate && npm run build",
    "start": "npm run build && firebase serve --only functions",
    "deploy": "npm run build:prod && firebase deploy --only functions",
    "deploy:staging": "npm run build:prod && firebase deploy --only functions --project staging",
    "deploy:prod": "npm run build:prod && firebase deploy --only functions --project production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint",
    "validate:full": "npm run type-check && npm run lint && npm run test",
    "check": "npm run validate",
    "clean": "rm -rf lib",
    "migrate": "npx tsx scripts/run-migrations.ts",
    "migrate:status": "npx tsx scripts/run-migrations.ts -- --status",
    "migrate:rollback": "npx tsx scripts/run-migrations.ts -- --rollback",
    "migrate:reset": "npx tsx scripts/run-migrations.ts -- --reset",
    "seed": "npx tsx scripts/run-migrations.ts -- --seed",
    "emulate": "firebase emulators:start",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@revisor-de-editais/types": "file:../../packages/types",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-functions": "^6.4.0",
    "google-auth-library": "^9.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "@types/pdf-parse": "^1.1.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions-test": "^3.1.1",
    "firebase-tools": "^13.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "licitacao",
    "cloud-functions",
    "firebase",
    "document-analysis",
    "government",
    "firestore"
  ],
  "author": "LicitaReview Team",
  "license": "MIT"
}
