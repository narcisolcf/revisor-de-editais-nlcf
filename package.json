{
  "name": "revisor-de-editais",
  "version": "1.0.0",
  "description": "Sistema inteligente de análise de documentos licitatórios com parâmetros personalizáveis por organização",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "web:dev": "turbo run dev --filter=web",
    "api:dev": "turbo run dev --filter=api",
    "analyzer:dev": "turbo run dev --filter=analyzer",
    "deploy:staging": "turbo run build && turbo run deploy:staging",
    "deploy:prod": "turbo run build && turbo run deploy:prod",
    "db:migrate": "turbo run db:migrate --filter=api",
    "db:seed": "turbo run db:seed --filter=api",
    "analyze": "turbo run analyze",
    "security:audit": "npm audit --recursive"
  },
  "keywords": [
    "licitação",
    "análise-documentos",
    "inteligência-artificial",
    "governo-digital",
    "compliance",
    "parâmetros-personalizados"
  ],
  "author": {
    "name": "Revisor de Editais Team",
    "email": "dev@revisor-de-editais.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/costaefeitosa/revisor-de-editais"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@turbo/gen": "^1.12.4",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.2.4",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "firebase-admin": "^13.4.0",
    "vitest": "3.2.4"
  }
}
